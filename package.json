{
  "name": "claude-code-hooks-multi-agent-observability",
  "version": "1.0.0",
  "description": "Real-time monitoring and visualization for Claude Code agents through comprehensive hook event tracking",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/client",
    "servers/bun",
    "servers/node"
  ],
  "scripts": {
    "install:all": "npm install && npm install --prefix apps/client && npm install --prefix servers/bun",
    "build": "npm run build --prefix apps/client && npm run typecheck --prefix servers/bun && npm run build --prefix servers/node",
    "build:client": "npm run build --prefix apps/client",
    "build:server": "npm run typecheck --prefix servers/bun",
    "dev": "./scripts/start-system.sh",
    "start": "./scripts/start-system.sh",
    "stop": "./scripts/reset-system.sh",
    "test": "./scripts/test-system.sh",
    "clean": "rm -rf apps/client/node_modules servers/bun/node_modules node_modules",
    "reset": "./scripts/reset-system.sh",
    "e2e": "./scripts/run-e2e.sh"
  },
  "bin": {
    "claude-observability": "./scripts/start-system.sh",
    "claude-obs-start": "./scripts/start-system.sh",
    "claude-obs-stop": "./scripts/reset-system.sh",
    "claude-obs-test": "./scripts/test-system.sh"
  },
  "keywords": [
    "claude-code",
    "observability",
    "monitoring",
    "hooks",
    "multi-agent",
    "real-time",
    "vue",
    "typescript",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": ""
}
