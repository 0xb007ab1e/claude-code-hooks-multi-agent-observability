# =============================================================================
# CENTRALIZED CONFIGURATION MANAGEMENT
# =============================================================================
# This file contains ALL environment variables used across all stacks
# Copy this file to .env and fill in the values for your environment
# Use the helper scripts in config/env-helpers/ to load these variables

# =============================================================================
# API KEYS FOR AI SERVICES
# =============================================================================

# Anthropic Claude API key
ANTHROPIC_API_KEY=

# OpenAI API key
OPENAI_API_KEY=

# ElevenLabs API key (for text-to-speech)
ELEVENLABS_API_KEY=

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Default AI model configurations
ANTHROPIC_MODEL=claude-3-5-haiku-20241022
OPENAI_MODEL=gpt-4.1-nano
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=nova
ELEVENLABS_MODEL=eleven_turbo_v2_5
ELEVENLABS_VOICE_ID=WejK3H1m7MI9CHnIjW9K

# =============================================================================
# USER CONFIGURATION
# =============================================================================

# Engineer/developer name for personalization
ENGINEER_NAME=Dan

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# HTTP server port
PORT=4000

# Node.js environment (development, production, test)
NODE_ENV=development

# Go server port (if different from main port)
GO_PORT=4001

# Python server port (if different from main port)
PYTHON_PORT=4002

# Rust server port (if different from main port)
RUST_PORT=4003

# .NET server port (if different from main port)
DOTNET_PORT=4004

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database path (used by multiple stacks)
DATABASE_PATH=events.db

# PostgreSQL connection URL (for production/advanced setups)
# Format: postgresql://username:password@host:port/database
POSTGRES_URL=

# Alternative PostgreSQL connection components
DATABASE_URL=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=observability
DB_USER=

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed CORS origins
# Use "*" for development, specific origins for production
CORS_ORIGINS=*

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# API key for authenticated requests
API_KEY=

# JWT secret for token signing
JWT_SECRET=

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limiting time window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per time window
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket heartbeat interval in milliseconds (30 seconds)
WS_HEARTBEAT_INTERVAL=30000

# WebSocket server URL for client connections
VITE_WEBSOCKET_URL=ws://localhost:4000/stream

# =============================================================================
# LOGGING
# =============================================================================

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Claude hooks log directory
CLAUDE_HOOKS_LOG_DIR=logs

# =============================================================================
# CLIENT CONFIGURATION
# =============================================================================

# Maximum number of events to display in the client
VITE_MAX_EVENTS_TO_DISPLAY=100

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Redis URL (for caching/session storage)
REDIS_URL=

# MongoDB URL (for document storage)
MONGODB_URL=

# Elasticsearch URL (for search/analytics)
ELASTIC_SEARCH_URL=

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker compose environment
COMPOSE_PROJECT_NAME=observability

# Docker network name
DOCKER_NETWORK_NAME=observability-network

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode flags
DEV_MODE=true
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Hot reload settings
HOT_RELOAD=true
WATCH_FILES=true

# =============================================================================
# PRODUCTION SECURITY NOTES
# =============================================================================

# For production deployment:
# 1. Set NODE_ENV=production
# 2. Use secure DATABASE_PATH with proper file permissions
# 3. Configure specific CORS_ORIGINS (avoid using "*")
# 4. Set strong API_KEY and JWT_SECRET values
# 5. Consider using PostgreSQL (set POSTGRES_URL)
# 6. Set appropriate rate limits for your use case
# 7. Use "warn" or "error" LOG_LEVEL for production
# 8. Enable authentication and security features
# 9. Use HTTPS in production
# 10. Regularly rotate API keys and secrets

